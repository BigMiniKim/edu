<script>

function funTower() {

return function(x) {
    for(let i = 1; i <=5; i++) {

        for(let j = 1; j <=i; j++){
            document.write("*");

        }
        document.write("<br>");
    }
}

}


var returnTower = funTower();
returnTower(5);



</script>
