    <script>
/*String grade(int avg) {
    return "수";
}*/

function funName() {
    console.log("명시적 선언입니다.");
}
var funAnnoymous = function () {
    console.log("익명 함수 선언입니다");
}

funName();
funAnnoymous();

function funName(x, y, z) {
				console.log("x : " + x);
				console.log("y : " + y);
				console.log("z : " + z);
				
				var result = x * y + z;
				
				return result;
			}
var result = 0;
result = funName(2,3,4);
console.log(result);

result = funName(2,3,4,5);
console.log(result);
result = funName(2,3);
console.log(result);

/*
				arguments
			*/
			var varArr;
			
			function funName() {
				
				return arguments;
			}
			
			varArr = funName(1, 2, 3, 4, 5, 6, 7);
			console.log("varArr : " + varArr);
			console.log("varArr.length : " + varArr.length);
			
			for(var i in varArr) {
				console.log("varArr[" + i + "] :" + varArr[i]);
			}
			
			console.log("---------------------------------------");
			
			varArr = funName("A", "B", "C", "D");
			console.log("varArr : " + varArr);
			console.log("varArr.length : " + varArr.length);
			
			for(var i in varArr) {
				console.log("varArr[" + i + "] :" + varArr[i]);
			}

            /* 함수 실행 순서*/
            fun1(); //정상실행
            //fun2(); //오류 발생

            //명시(선언)적 함수 생성
            function fun1(){
                console.log("fun1 run!");
            }

            //익명 함수 생성
             var fun2 = function() {
                 console.log("fun2 run!")
             }
             fun2(); //정상 실행

    </script>
</head>
